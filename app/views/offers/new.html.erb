<div class="container">
  <div class="row">
    <h3 class="text-center">Offer Form</h3>    
    
    <div class="col-md-4 col-md-offset-4">
      <%= flash[:notice] %>
      <div class="well">
        <%= form_for @offer do |f| %>
          <div class="form-group">
            <%= f.label :client_name %>
            <%= f.text_field :client_name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :mobile %>
            <%= f.text_field :mobile, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :delivery_address %>
            <%= f.text_field :delivery_address, class: 'form-control' %>
            <%= f.label :postcode %>
            <%= f.text_field :postcode, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :order_description %>
            <%= f.text_field :order_description, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_field :comments, class: 'form-control' %>
          </div>
          
          <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
